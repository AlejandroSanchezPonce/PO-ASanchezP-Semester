package homework.pkg1.p2;

import java.util.*;
/**
 *
 * @author Alejandro
 */
public class Deportes {
    
    private String disciplina;//atributos de la clase
    private ArrayList < Alumnos > alumno;
    
    public Deportes(String disciplina){//constructor
        this.disciplina = disciplina;
        this.alumno = new ArrayList();
    }
    public String getDisciplina() {// solamente el getter ya que no modificas el valor que te den
        return disciplina;
    }
    public boolean addAlumno(Alumnos alumno){//
        for(Alumnos temp : this.alumno) {// ciclo for que compara la cadena de texto contra un objeto ignorando mayúsculas y minúsculas
            if(temp.getNombre().equalsIgnoreCase(alumno.getNombre())){// si son iguales retorna false
                return false;
            }
        }
        this.alumno.add(alumno);// si son diferentes te añade elementos al arraylist 
        alumno.addDisciplina(this);
        return true;
    }
    public boolean removeAlumno(Alumnos alumno){
        for(Alumnos temp : this.alumno) {
            if(temp.getNombre().equalsIgnoreCase(alumno.getNombre())){
                this.alumno.remove(temp);
                return true;
            }
        } return false;
    }
    @Override
    public String toString(){
        String string = " Deporte = " + this.getDisciplina() + "Participantes"; // instancia un objeto string para guartdar los datos y luego devolverlos
        for (Alumnos alumnos : alumno) {
            string+=" Name = "+ alumnos.getNombre()+" ID = "+ alumnos.getMatricula();
        }
        return string;
    }

}
