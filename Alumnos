package homework.pkg1.p2;
import java.util.*;
/**
 *
 * @author Alejandro
 */
public class Alumnos {
    
    private String nombre;//atributos de la clase
    private String matricula;
    private ArrayList < Deportes > deporte;
    
    public Alumnos(String nombre, String matricula){// constructor
        this.nombre = nombre;
        this.matricula = matricula;
        this.deporte= new ArrayList();
    }
    public String getNombre() {// solamente los getters ya que no modificamos nigun valor
        return nombre;
    }
    public String getMatricula() {
        return matricula;
    }
    public boolean addDisciplina(Deportes Disciplina){
        for(Deportes temp : this.deporte) {// temp es para el tipo de dato
            if(temp.getDisciplina().equalsIgnoreCase(Disciplina.getDisciplina())){// ciclo for que compara la cadena de texto contra un objeto ignorando mayúsculas y minúsculas
                return false;
            }
        }
        this.deporte.add(Disciplina);
        return true;
    }
    public boolean removeDisciplina(Deportes deporte){
        for(Deportes temp : this.deporte) {
            if(temp.getDisciplina().equalsIgnoreCase(deporte.getDisciplina())){
                this.deporte.remove(temp);
            }
        }
        return false;
    }

    @Override
    public String toString(){
        return "Nombre = "+this.nombre+" Matricula = "+this.matricula;
                
    }
    
}
